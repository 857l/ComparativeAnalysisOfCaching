<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/error"
        android:padding="16dp">

        <TextView
            android:id="@+id/warning_snackbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toStartOf="@id/icon_warning"
            android:layout_alignParentStart="true"
            tools:text="@string/warning_snackbar_not_support_type_title" />

        <TextView
            android:id="@+id/warning_snackbar_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/warning_snackbar_title"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/icon_warning"
            android:layout_alignParentStart="true"
            tools:text="@string/warning_snackbar_not_support_type_description" />

        <ImageView
            android:id="@+id/icon_warning"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_warning"
            android:rotation="180"
            android:tint="@color/white"
            android:paddingEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/warning_snackbar_title"
            android:layout_alignBottom="@id/warning_snackbar_description" />

    </RelativeLayout>

</merge>